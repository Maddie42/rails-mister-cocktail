

<div class="title text-center">
  <h1>New Dose</h1>
  <p>Create a new dose</p>
</div>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.input :ingredient, collection: Ingredient::CATEGORIES %>
  <%= f.submit "add a dose", class: "btn btn-outline-success" %>
<% end %>
