<div class="list_review">
  <% @cocktail.doses.each do |dose| %>
  <%= dose.description %>
  <%= dose.ingredient.name %>
  <% end %>
</div>


<div class="adddose">
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.input :ingredient, collection: Ingredient.all %>
    <%= f.submit "add a dose", class: "btn btn-outline-success" %>
  <% end %>
</div>
